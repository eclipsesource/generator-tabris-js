{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "commonjs": true
  },
  "rules": {
    "eol-last": "error",
    "eqeqeq": ["error", "allow-null"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "max-len": ["error", 120, 2],
    "no-console": "off",
    "no-trailing-spaces": "error",
    "no-var": "error",
    "no-with": "error",
    "quotes": ["error", "single", "avoid-escape"],
    "semi": "error"
  }
}
