{
  "name": "<%- name %>",
  "version": "<%- version %>",
  "main": "<%- main %>",
  "private": true,
  "scripts": {
<% if (proj_type === 'js') { -%>
    "test": "eslint .",
    "start": "tabris serve"
<% } else if (proj_type === 'ts') { -%>
    "test": "npm run lint",
    "lint": "tslint --project . 'src/**/*.ts'",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "start": "npm-run-all --parallel watch serve",
    "serve": "tabris serve"
 <% } -%>
  }
}
