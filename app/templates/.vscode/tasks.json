{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": [<% if (proj_type === 'ts') { %>
        "$tsc-watch"
        <% } %>]
    },<% if (proj_type === 'ts') { %>
    {
      "type": "npm",
      "script": "build",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "watch",
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        "$tslint5"
      ]
    },<% } %>
    {
      "type": "npm",
      "script": "test",
      "problemMatcher": [
        "$tslint5",
        "$tsc"
      ]
    }
  ]
}