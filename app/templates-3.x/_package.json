{
  "main": "<%- main %>",
  "private": true,
  "scripts": {
<% if (proj_type === 'js') { %>
    "test": "eslint .",
    "start": "tabris serve -a"
<% } else if (proj_type === 'ts') { %>
    "test": "npm run build && npm run lint<% if (tests === 'mocha') { %> && npm run mocha<% } %>",
    "lint": "tslint --project . -t verbose",
    <% if (tests === 'mocha') { %>
    "mocha" : "mocha --require ts-node/register ./test/*.test.*",
    <% } %>
    "build": "node_modules/typescript/bin/tsc -p .",
    "watch": "node_modules/typescript/bin/tsc -p . -w --preserveWatchOutput --inlineSourceMap",
    "start": "tabris serve -a -w"
 <% } %>
  }
}
