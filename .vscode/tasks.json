{
  "version": "0.1.0",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "command": "node",
      "taskName": "test file",
      "args": ["node_modules/.bin/mocha", "${file}"],
      "isTestCommand": true
    },
    {
      "command": "npm",
      "taskName": "test",
      "args": ["test"],
      "isBuildCommand": true
    }
  ]
}
